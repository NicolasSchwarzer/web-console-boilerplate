{
  "name": "web-console-template",
  "private": true,
  "description": "A template of web console project which saves your time on project initialization.",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.config.dev.js",
    "build": "rimraf build && webpack --config config/webpack.config.prod.js",
    "lint": "npm run lint:es && npm run lint:md",
    "lint:es": "eslint . --ext .js,.jsx",
    "lint:md": "eslint . --ext .md",
    "lint-fix": "npm run lint-fix:es && npm run lint-fix:md",
    "lint-fix:es": "eslint . --ext .js,.jsx --fix",
    "lint-fix:md": "eslint . --ext .md --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicolasSchwarzer/web-console-template.git"
  },
  "author": "Nicolas Wan <nbwansjtu@gmail.com> (https://github.com/NicolasSchwarzer)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NicolasSchwarzer/web-console-template/issues"
  },
  "homepage": "https://github.com/NicolasSchwarzer/web-console-template#readme",
  "dependencies": {
    "antd": "^3.15.2",
    "babel-polyfill": "^6.26.0",
    "react": "^16.8.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "rimraf": "^2.6.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint-fix:es",
      "git add"
    ],
    "*.md": [
      "npm run lint-fix:md",
      "git add"
    ]
  }
}
